    Private Sub Button1_Click(ByVal sender As System.Object, ByVal e As System.EventArgs) Handles Button1.Click
        Dim A As Single
        A = TextBox1.Text
        If A > 0 Then
            TextBox2.Text = "عدد موجب (+)"
        ElseIf A < 0 Then
            TextBox2.Text = "عدد سالب (-)"
        Else
            TextBox2.Text = "العدد صفر (0)"
        End If
End Sub
